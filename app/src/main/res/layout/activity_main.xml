<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.example.collisiondetection.GridView
    android:id="@+id/grid"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    />
    <ImageView
        android:id="@+id/player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/cuteface"
        android:visibility="invisible"
/>
    <ProgressBar
        android:id="@+id/playerHealth"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/player"
        style="@android:style/Widget.ProgressBar.Horizontal" />

    <ImageView
        android:id="@+id/enemy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/badboy"
        android:visibility="invisible"
/>
    <ProgressBar
        android:id="@+id/enemyHealth"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/enemy"
        style="@android:style/Widget.ProgressBar.Horizontal" />
    <TextView
        android:id="@+id/EnemyTextDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/PlayerTextDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        />

</androidx.constraintlayout.widget.ConstraintLayout>